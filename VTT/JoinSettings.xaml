<Window x:Class="VTT.JoinSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JoinSettings" Height="212" Width="252" ResizeMode="NoResize">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Height="29" Margin="25,16,0,0" VerticalAlignment="Top" Width="51"/>
        <Label Content="IP:" HorizontalAlignment="Left" Margin="25,53,0,0" VerticalAlignment="Top" Width="51"/>
        <TextBox Name="nameBox" HorizontalAlignment="Left" Height="29" Margin="81,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
        <TextBox Name="ipBox" HorizontalAlignment="Left" Height="29" Margin="81,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
        <Button Name="joinButton" Content="Join" HorizontalAlignment="Left" Height="34" Margin="81,119,0,0" VerticalAlignment="Top" Width="66" Click="joinButton_Click"/>
        <Button Name="closeButton" Content="Cancel" HorizontalAlignment="Left" Margin="150,119,0,0" VerticalAlignment="Top" Width="66" Height="34" Click="closeButton_Click"/>
        <TextBox x:Name="portBox" Text="9080" HorizontalAlignment="Left" Height="29" Margin="81,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135"/>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="25,84,0,0" VerticalAlignment="Top" Width="51"/>
    </Grid>
</Window>
